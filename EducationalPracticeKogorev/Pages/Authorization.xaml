<Page x:Class="EducationalPracticeKogorev.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationalPracticeKogorev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1440"
      Title="Authorization">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Логин</TextBlock>
                <TextBox x:Name="LoginBox"></TextBox>
            </StackPanel>
            <Button x:Name="LogInButton" HorizontalAlignment="Stretch" Click="LogInButton_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
